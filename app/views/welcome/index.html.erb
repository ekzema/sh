<div class="container-fluid">
  <div class="">
    <!-- слайдер -->

    <div class="col-xs-12 col-sm-10">
    
      <div id="carousel" class="carousel slide " data-ride="carousel" data-no-turbolink="false">
        <ol class="carousel-indicators">
          <li data-target="#carousel" data-slide-to="0" class="active"></li>
          <% @image_count.times do %>
              <li data-target="#carousel" data-slide-to=<%= @i %>></li>
              <% @i+=1 %>
          <% end %>
        </ol>
        <div class="carousel-inner">
          <div class="item active">
            <a href="/about"><%= image_tag '5.jpg' %></a>

            <div class="carousel-caption">
              <h3>StockMarket.com.ua</h3>

              <p>О нас</p>
            </div>
          </div> 
          <% @category.each do |category| %>
              <% category.category_slide_images.each do |slide| %>
                  <div class="item">
                  <%= link_to category_path(category.id) do %>
                  <%= image_tag slide.image %> 
                  <% end %>
                  <!--   <a href="/a.html">
                      <%= image_tag slide.image %>
                    </a> -->

                    <div class="carousel-caption">
                      <h3><%= slide.category.name %></h3>
                      <p><%= slide.category.description %></p>
                    </div>
                  </div>
              <% end %>
          <% end %>
        </div>

        <a class="carousel-control left" href="#carousel" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="carousel-control right" href="#carousel" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
      </div> 
    </div>

    <!-- реклама продавца
     -->
     
    <div class="col-xs-0 col-sm-2 ">
    <div class="row">
      <!-- слайдер для рекламы-продавца -->
        <section class="autoplay">
            <% @sellers.each do | seller | %>
            <div>
              <%= image_tag seller.avatar(:medium) %>
              <div class="sld1"><p ><%= seller.name %></p></div>
            </div>
            <% end %>
        </section>
        <!-- слайдер для рекламы-товара -->
        <section class="autoplay">
            <% @products.each do |product| %>
            <div class="">
            <%= link_to product_path(product.id), :class => 'size2' do %>
              <%= image_tag product.main_image.url(:medium) %> 
              <p class="size3"><%= product.name %></p>
              <% end %>
            </div>
            <% end %>
        </section>
    </div>
    </div>
