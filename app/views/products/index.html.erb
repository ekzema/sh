<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Size</th>
      <th>Price</th>
      <th>Quality</th>
      <th>Category</th>
      <th>Twocategory</th>
      <th>Threecategory</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.size %></td>
        <td><%= product.price %></td>
        <td><%= product.quality %></td>
        <td><%= product.category_id %></td>
        <td><%= product.twocategory_id %></td>
        <td><%= product.threecategory_id %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

