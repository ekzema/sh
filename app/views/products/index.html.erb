<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr class="info">
      <th>Main_image</th>
      <th>Name</th>
      <th>Size</th>
      <th>Article</th>
      <th>Price</th>
      <th>Quality</th>
      <th>Category</th>
      <th>Twocategory</th>
      <th>Threecategory</th>
      <th>Description</th>
      <th>Meta_title</th>
      <th>Meta_desc</th>
      <th>Meta_key</th>
      <th>Visible</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr class="success imgcat">
        <td><%= image_tag product.main_image.url %></td>
        <td><%= product.name %></td>
        <td><%= product.size %></td>
        <td><%= product.article %></td>
        <td><%= product.price %></td>
        <td><%= product.quality %></td>
        <td><%= product.category_id %></td>
        <td><%= product.twocategory_id %></td>
        <td><%= product.threecategory_id %></td>
        <td><%= product.description %></td>
        <td><%= product.meta_title %></td>
        <td><%= product.meta_desc %></td>
        <td><%= product.meta_key %></td>
        <td><%= product.visible %></td>
        <td><%= link_to 'Show', product, :type => 'button', :class => 'btn btn2' %></td>
        <td><%= link_to 'Edit', edit_product_path(product), :type => 'button', :class => 'btn btn3' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :type => 'button', :class => 'btn btn1' %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Product', new_product_path, :type => 'button', :class => 'btn btn2' %>

