<div class="container">
  <div class="row">
<h3 class="text-center">Редактирование товара</h3>

<%= render 'form', product: @product %>

<div class="col-12 justify-content-md-center d-flex flex-column flex-md-row align-items-center">

  <div class="col-12 col-md-4">
      <%= form_tag(seller_panel_product_visible_path, method: :post,  class: "product_info", id: "product_visible#{@product.id}") do %>
          <%= hidden_field_tag 'product_id', @product.id %>
          <%= check_box_tag 'visible', 1, @product.visible == 1, {id: "product#{@product.id}", pr_id: @product.id }  %>
          <%= label_tag "product#{@product.id}", 'Показать товар <span></span>'.html_safe %>
      <% end %>
  </div>

<script type="text/javascript">

    $(function () {
        $('input[type=checkbox]').change(function () {
            var check_id = $(this).attr('pr_id');
            $.ajax({
                url: '/seller_panel/product_visible',
                type: 'POST',
                data: $('#product_visible'+check_id).serialize()
            });
        });
    });

</script>

      </div>

      <div class="col-12 justify-content-md-center d-flex flex-column flex-md-row">
    
<!--  <%= link_to 'Просмотр', @product, :type => 'button', :class => 'btn button_form' %> -->

          <div class="col-12 col-md-4">
          <%= link_to 'Назад', seller_panel_product_path, :type => 'button', :class => 'btn button_form' %>
          </div>


</div>
  </div>
</div>