<div class="container">
  <div class="row">
<h3 class="text-center">Редактирование товара</h3>

<%= render 'form', product: @product %>
    <div class="form-group col-md-offset-2">
      <div class="col-sm-2 "></div>
      <div class="col-sm-10">
<%= form_tag(seller_panel_product_visible_path, method: :post,  class: "product_info", id: "product_visible#{@product.id}") do %>
    <%= hidden_field_tag 'product_id', @product.id %>
    <%= check_box_tag 'visible', 1, @product.visible == 1, {id: "product#{@product.id}", pr_id: @product.id }  %>
    <%= label_tag "product#{@product.id}", 'Показать товар <span></span>'.html_safe %>
<% end %>

<script type="text/javascript">

    $(function () {
        $('input[type=checkbox]').change(function () {
            var check_id = $(this).attr('pr_id');
            $.ajax({
                url: '/seller_panel/product_visible',
                type: 'POST',
                data: $('#product_visible'+check_id).serialize()
            });
        });
    });

</script>
</div>
      </div>
      <div class="form-group col-md-offset-4">
    
    
<%= link_to 'Show', @product, :type => 'button', :class => 'btn btn3' %>
<%= link_to 'Back', products_path, :type => 'button', :class => 'btn btn3' %>
</div>
  </div>
</div>