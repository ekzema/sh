<!DOCTYPE html>
<html>
  <head>
    <title>Sh</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    '/bootstrap/css/bootstrap.css' %>
    <%= stylesheet_link_tag    '/slick/css/slick.css' %>
    <%= stylesheet_link_tag    '/slick/css/slick-theme.css' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag '/bootstrap/js/bootstrap.js'%>
    <%= javascript_include_tag '/slick/js/slick.js'%>
  </head>

  <body>

    <header>
      <!-- меню11 -->

        <div class="navbar navbar-inverse navbar-default navbar-static-top">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#responsive-menu">
                <span class="sr-only">open</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand brand visible-xs" href="/">Магазин стоковой одежды</a>
            </div>
            <div class="collapse navbar-collapse " id="responsive-menu">
              <ul class="nav navbar-nav tmenu">
                <li><a href="/">index <!-- О нас --></a></li>
                <li><a href="/categories">categories <!-- Новости сайта --></a></li>
                <li><a href="/products">products <!-- VIP-Статус --></a></li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                  <a type="button" id="drop001" role="button" class="dropdown-toggle navbar-brand tmenu" data-toggle="dropdown" href="#"><%= seller_signed_in? ? 'Кабинет' : 'Войти' %><b class="caret"></b></a>
                  <ul class="dropdown-menu " role="menu" aria-labelledby="drop001">
                    <% if seller_signed_in? %>
                        <li><%= link_to('Выйти', destroy_seller_session_path, {:class => 'xsmenu', :tabindex => '-1'}) %></li>
                        <li class="divider"></li>
                        <li><center><%= current_seller.email %></center ></li>
                    <% else %>
                        <li><%= link_to('Войти', new_seller_session_path, {:class => 'xsmenu', :tabindex => '-1'}) %></li>
                        <li class="divider"></li>
                        <li><%= link_to('Регистрация', new_seller_registration_path, {:class => 'xsmenu', :tabindex => '-1'}) %></li>
                    <% end %>
                  </ul>
                </li>
              </ul>
            </div>
          </div>
        </div>
    </header>
    <!-- основное меню  -->

<header>
  <div class="navbar navbar-default smenu">
    <div class="container">
      <div class="row">

        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#responsive-menu1">
            <span class="sr-only">open</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand brand visible-xs" href="/">МЕНЮ</a>
        </div>
        <div class="collapse navbar-collapse" id="responsive-menu1">

          <ul class="nav navbar-nav">

            <% @catmenu.each do |category| %>
                <li class="dropdown">
                  <a type="button" id="<%= category.id %>" role="button" class="dropdown-toggle navbar-brand" data-toggle="dropdown" href="#"><%= category.name %>
                    <b class="caret"></b></a>
                  <ul class="dropdown-menu" role="menu" aria-labelledby="drop001">
                    <% category.twocategories.each do |twocategory| %>
                        <li class="dropdown-submenu">
                          <a tabindex="-1" href="#"><%= twocategory.name %></a>
                          <ul class="dropdown-menu">
                            <% twocategory.threecategories.each do |threecategory| %>
                                <li><a tabindex="-1" href="#"><%= threecategory.name %></a></li>
                            <% end %>
                          </ul>
                        </li>
                    <% end %>
                  </ul>
                </li>
            <% end %>

            <li>
              <form class="navbar-form navbar-left hidden-sm hidden-xs" role="search">
                <div class="form-group">
                  <input type="text" class="form-control" placeholder="Поиск">
                </div>
                <button type="submit" class="btn btn-default">Найти</button>
              </form>
            </li>
            <li><a class="navbar-brand brand hidden-xs" href="/">Магазин стоковой одежды</a></li>
          </ul>

        </div>
      </div>
    </div>
  </div>
</header>


    <%= yield %>

    <!-- footer -->

    <footer class="navbar navbar-inverse navbar-default " id="footer">
    
      
        <div class="container ">
          <div class="row">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#responsive">
              <span class="sr-only">open</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div class="collapse navbar-collapse tmenu1" id="responsive">
            <ul class="nav navbar-nav">
              <li><a href="#">рейтинг продавцов</a></li>
              <li><a href="#">популярные товары</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li><a href="#">сайт разработан labsites.org</a></li>
            </ul>
          </div>
        </div>
     
    </footer>

  </body>
</html>
