  <%= javascript_include_tag '/slick/js/slick.js' %>
  <%= javascript_include_tag '/fancybox/lib/jquery.mousewheel-3.0.6.pack.js' %>
  <%= javascript_include_tag '/fancybox/source/jquery.fancybox.pack.js' %>
