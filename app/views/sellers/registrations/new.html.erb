<div class="container">
<div class="row">
<h2 class="text-center">Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="form-group col-md-offset-2">
  <div class="col-sm-2">
    <%= f.label'Фото', class:"control-label form" %>
    </div>
  <div class="col-sm-10">
    <ul class="sliderImg">
    <li><%= image_tag 'no_photo_mini.jpg', title: "no avatar", class: "no_avatar" %></li>
    <li><%= f.file_field :avatar %>
  </ul>
  </div>

</div>

<div class="form-group col-md-offset-2">
  <div class=" col-sm-2 ">
    <%= f.label :email, class:"control-label form" %>
    </div>
  <div class="col-sm-10 ">
    <%= f.email_field :email, autofocus: true, class:"form-control form" %>
  </div>
  
</div>

<div class="form-group col-md-offset-2">
  <div class="col-sm-2 ">
    <%= f.label 'Имя', class:"control-label form" %><br />
    </div>
  <div class="col-sm-10 ">
    <%= f.text_field :name, class:"form-control form" %>
  </div>
</div>

<div class="form-group col-md-offset-2">
  <div class="col-sm-2 ">
    <%= f.label 'Фамилия', class:"control-label form" %>
    </div>
  <div class="col-sm-10 ">
    <%= f.text_field :surname, class:"form-control form" %>
  </div>
</div>

<div class="form-group col-md-offset-2">
  <div class="col-sm-2 ">
    <%= f.label 'Дата рождения', class:"control-label control-l form" %>
    </div>
  <div class="col-sm-10">
  <%= f.text_field :date_of_birth, class:"form-control form", id:"datepicker",'data-no-turbolink' => true %>
  </div>
</div>

<div class="form-group col-md-offset-2">
  <div class="col-sm-2 ">
    <%= f.label 'Город', class:"control-label form" %>
    </div>
  <div class="col-sm-10 ">
    <%= f.select(:city, Seller::CITY_TYPES,  {prompt: 'Выберите область'}, class:"form-control form") %>
  </div>
</div>

<div class="form-group col-md-offset-2">
  <div class="col-sm-2 ">
    <%= f.label 'Промо код', class:"control-label form control-l" %><br />
    </div>
  <div class="col-sm-10 ">
    <%= f.text_field :promo_code, class:"form-control form" %>
  </div>
</div>

<div class="form-group col-md-offset-2">
  <div class="col-sm-2 ">
    <%= f.label :password, class:"control-label form control-l" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> min)</em>
    <% end %>
    </div>
  <div class="col-sm-10 ">
    <%= f.password_field :password, autocomplete: "off", class:"form-control form" %>
  </div>
</div>

<div class="form-group col-md-offset-2">
  <div class="col-sm-2 ">
    <%= f.label :password_confirmation, class:"control-label form control-l" %>
    </div>
  <div class="col-sm-10 ">
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control form" %>
  </div>
</div>
  
<div class="form-group col-md-offset-2">
  <div class="col-sm-offset-2 col-sm-10 actions">
    <button type="submit" class="btn btn-default">Зарегистрироваться</button>
  </div>
</div>
  
<% end %>



</div>
<%= render "sellers/shared/links" %>
</div>