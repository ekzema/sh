<div class="container">
<div class="row">
<h2 class="text-center">Повторная инструкция по входу</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

	<div class="form-group col-md-offset-2">
  <div class="col-sm-2 ">
    <%= f.label :email, class:"control-label" %><br />
    </div>
  <div class="col-sm-10 ">
    <%= f.email_field :email, autofocus: true, class:"form-control form" %>
  </div>
  </div>

  <div class="col-sm-offset-4 col-sm-10 actions">
    <%= f.submit "Получить инструкцию по входу повторно",class:"btn btn-default" %>
  </div>
<% end %>

<%= render "sellers/shared/links" %>
</div>
</div>