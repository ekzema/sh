<%= form_for(threecategory, :html => {:class => 'form-horizontal', multipart: true}) do |f| %>
  <% if threecategory.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(threecategory.errors.count, "error") %> prohibited this threecategory from being saved:</h2>

      <ul>
      <% threecategory.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group col-md-offset-2">
      <div class="col-sm-2 ">
        <%= f.label 'Основная картинка', class:"control-label" %>
      </div>
      <div class="col-sm-10 ">
        <ul class="sliderImg imgcat">
          <li><%= image_tag @threecategory.image.url, title: "#{@threecategory.name}", class: "EditImage" %></li>
          <li><%= f.file_field :image %><% unless @threecategory.image_file_name.nil? %></li>
                <li><%= link_to("Удалить", {action: :delete_attachment, id: @threecategory.id}, method: :delete, data: { confirm: 'Вы уверины что хотите удалить?' }) %></li>
            <% end %>
            </ul>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-2 ">
        <%= f.label 'Название', class: "control-label" %>
      </div>
      <div class="col-sm-10 ">
        <%= f.text_field :name, class: "form-control form" %>
      </div>
    </div>

    <div class="form-group">
      <div class=" col-sm-2">
        <%= f.label 'Url_translit', class:"control-label" %>
      </div>
      <div class="col-sm-10 ">
        <%= f.text_field :translit_url, class: "form-control form", "required" => true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-2 ">
        <%= f.label 'Описание', class: "control-label" %>
      </div>
      <div class="col-sm-10 ">
        <%= f.text_area :description, class: "form-control form" %>
      </div>
    </div>

    <div class="form-group">
      <div class=" col-sm-2">
        <%= f.label 'Выберите категорию', class:"control-label" %>
      </div>
      <div class="col-sm-10 ">
        <%= f.select( "twocategory_id", Twocategory.all.collect {|twocategory| [ twocategory.name + "(#{twocategory.category.name})", twocategory.id ] }, { :include_blank => '- Категории -' }, :class => 'form-control') %>
      </div>


    </div>
    <%= f.submit "Сохранить", :class => 'btn btn2 actions col-md-offset-4' %>
    <%= link_to 'Назад', admin_panel_threecategories_path, class: 'btn btn-primary' %>
<% end %>
