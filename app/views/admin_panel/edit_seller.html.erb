<%= form_for(@seller, :as => :seller, :url => update_seller_admin_panel_path, :method => :put, :html => {"data-parsley-validate" => true}) do |f| %>
    <div class="form-group col-md-offset-2">
        <div class="col-sm-2">
            <%= f.label'Фото', class:"control-label form" %>
        </div>
        <div class="col-sm-10">
            <ul class="sliderImg">
              <% if @seller.avatar_file_name.nil? %>
                <li><%= image_tag 'no_photo_mini.jpg', title: "no avatar", class: "no_avatar" %></li>
              <% else %>
                <%= image_tag @seller.avatar, style: 'height:100px;' %>
              <% end %>
                <li><%= f.file_field :avatar %></li>
            </ul>
        </div>
    </div>

    <div class="form-group col-md-offset-2">
        <div class=" col-sm-2 ">
            <%= f.label :email, class:"control-label form" %>
        </div>
        <div class="col-sm-10 ">
            <%= f.email_field :email, autofocus: true, class:"form-control form", "required" => true, "type" => "email", "data-parsley-trigger" => "change", "data-parsley-error-message" => "Введите свой <span style='font-weight: bold;color:#5EBB5E;'>Email</span>".html_safe %>
        </div>
    </div>

    <div class="form-group col-md-offset-2">
        <div class="col-sm-2 ">
            <%= f.label 'Имя', class:"control-label form" %><br />
        </div>
        <div class="col-sm-10 ">
            <%= f.text_field :name, class:"form-control form", "required" => true, "data-parsley-trigger" => "change", "data-parsley-error-message" => "Введите <span style='font-weight: bold;color:#5EBB5E;'>Имя</span>".html_safe %>
        </div>
    </div>

    <div class="form-group col-md-offset-2">
        <div class="col-sm-2 ">
            <%= f.label 'Фамилия', class:"control-label form" %>
        </div>
        <div class="col-sm-10 ">
            <%= f.text_field :surname, class:"form-control form", "required" => true, "data-parsley-trigger" => "change", "data-parsley-error-message" => "Введите <span style='font-weight: bold;color:#5EBB5E;'>Фамилию</span>".html_safe %>
        </div>
    </div>

    <div class="form-group col-md-offset-2">
        <div class="col-sm-2 ">
            <%= f.label 'Дата рождения', class:"control-label control-l form" %>
        </div>
        <div class="col-sm-10">
            <%= f.text_field :date_of_birth, class:"form-control form", id:"datepicker",'data-no-turbolink' => true, "required" => true, "data-parsley-trigger" => "change", "data-parsley-error-message" => "Введите <span style='font-weight: bold;color:#5EBB5E;'>Дату рождения</span>".html_safe %>
        </div>
    </div>

    <div class="form-group col-md-offset-2">
        <div class="col-sm-2 ">
            <%= f.label 'Город', class:"control-label form" %>
        </div>
        <div class="col-sm-10 ">
            <%= f.select(:city, Seller::CITY_TYPES,  {prompt: 'Выберите область'}, class:"form-control form", "required" => true, "data-parsley-trigger" => "change", "data-parsley-error-message" => "Выберите<span style='font-weight: bold;color:#5EBB5E;'>Свою область</span>".html_safe) %>
        </div>
    </div>

    <div class="form-group col-md-offset-2">
        <div class="col-sm-2 ">
            <%= f.label 'Промо код', class:"control-label form control-l" %><br />
        </div>
        <div class="col-sm-10 ">
            <%= f.text_field :promo_code, class:"form-control form" %>
        </div>
    </div>

    <div class="form-group col-md-offset-2">
        <div class="col-sm-2 ">
            <%= f.label 'Разрешить авторизацию', for: :moderation %>
        </div>
        <div class="col-sm-10 ">
            <%= f.check_box :moderation, id: :moderation  %>
        </div>
    </div>
    <div class="form-group col-md-offset-2">
        <div class="col-sm-offset-2 col-sm-10 actions">
         <br>
            <button type="submit" class="btn btn-default">Изменить</button>
        </div>
    </div>
<% end %>