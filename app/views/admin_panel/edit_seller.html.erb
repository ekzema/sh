<section id="main-content">
  <section class="wrapper">
    <div class="row">
      <div class="col-lg-12">
        <section class="panel">
          <header class="panel-heading">
            Изменить данные
          </header>
          <div class="panel-body">
            <%= form_for(@seller, :as => :seller, :url => update_seller_admin_panel_path, :method => :put, :html => {'data-parsley-validate' => true, :class => 'form-horizontal'}) do |f| %>
                <div class="form-group">
                  <div class="col-sm-2 ">
                    <%= f.label 'Основное фото', class: "control-label" %>
                  </div>
                  <div class="col-sm-10">
                    <ul class="sliderImg imgcat">
                      <li><%= image_tag @seller.avatar.url, title: "#{@seller.name}", class: "EditImage", style: 'height: 100px;' %></li>
                      <li><%= f.file_field :avatar %>
                        <% unless @seller.avatar_file_name.nil? %></li>
                            <li><%= link_to("Удалить", {action: :delete_attachment_seller, id: @seller.id}, method: :delete, data: {confirm: 'Вы уверины что хотите удалить?'}) %></li>
                        <% end %>
                        </ul>
                  </div>
                </div>

                <div class="form-group">
                    <div class=" col-sm-2 ">
                        <%= f.label :email, class:"control-label" %>
                    </div>
                    <div class="col-sm-10 ">
                        <%= f.email_field :email, autofocus: true, class:"form-control form", "required" => true, "type" => "email", "data-parsley-trigger" => "change", "data-parsley-error-message" => "Введите свой <span style='font-weight: bold;color:#5EBB5E;'>Email</span>".html_safe %>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 ">
                        <%= f.label 'Имя', class:"control-label" %><br />
                    </div>
                    <div class="col-sm-10 ">
                        <%= f.text_field :name, class:"form-control form", "required" => true, "data-parsley-trigger" => "change", "data-parsley-error-message" => "Введите <span style='font-weight: bold;color:#5EBB5E;'>Имя</span>".html_safe %>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 ">
                        <%= f.label 'Фамилия', class:"control-label" %>
                    </div>
                    <div class="col-sm-10 ">
                        <%= f.text_field :surname, class:"form-control form", "required" => true, "data-parsley-trigger" => "change", "data-parsley-error-message" => "Введите <span style='font-weight: bold;color:#5EBB5E;'>Фамилию</span>".html_safe %>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 ">
                        <%= f.label 'Дата рождения', class:"control-label" %>
                    </div>
                    <div class="col-sm-10">
                        <%= f.text_field :date_of_birth, class:"form-control form", id:"datepicker",'data-no-turbolink' => true, "required" => true, "data-parsley-trigger" => "change", "data-parsley-error-message" => "Введите <span style='font-weight: bold;color:#5EBB5E;'>Дату рождения</span>".html_safe %>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 ">
                        <%= f.label 'Город', class:"control-label" %>
                    </div>
                    <div class="col-sm-10 ">
                        <%= f.select(:city, Seller::CITY_TYPES,  {prompt: 'Выберите область'}, class:"form-control form", "required" => true, "data-parsley-trigger" => "change", "data-parsley-error-message" => "Выберите<span style='font-weight: bold;color:#5EBB5E;'>Свою область</span>".html_safe) %>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 ">
                        <%= f.label 'Промо код', class:"control-label" %><br />
                    </div>
                    <div class="col-sm-10 ">
                        <%= f.text_field :promo_code, class:"form-control form" %>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2 ">
                        <%= f.label 'Разрешить авторизацию', for: :moderation, class:" control-label" %>
                    </div>
                    <div class="col-sm-10 ">
                        <%= f.check_box :moderation, id: :moderation  %>
                    </div>
                </div>
                <%= f.hidden_field :reset_session, :value => 1 %>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10 actions">
                     <br>
                      <%= link_to 'Назад', :back, class: 'btn btn-primary' %>
                        <button type="submit" class="btn btn-success editSeller">Изменить</button>
                    </div>
                </div>
            <% end %>
             </section>
            </div>
            </div>
        </div>
    </section>
</section>