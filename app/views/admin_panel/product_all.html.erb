

</div>
<center><%= link_to 'Новый товар', new_product_path %></center>

<ul>
  <% @product.each do |product| %>
      <li><%= product.name %><%= link_to 'Изменить', edit_product_admin_panel_path(product.id.to_s+'-'+transtlit_name(product.name)) %></li>
<% end %>
</ul>

<section id="main-content">
  <section class="wrapper">
    <div class="container">
      <% if flash[:alert] %>
          <div class="alert alert-error" class="text-center">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= flash[:alert] %></div>
      <% end %>
      <% if flash[:notice] %>
          <div class="alert alert-info" class="text-center">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= flash[:notice] %>
          </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <section class="panel">
          <header class="panel-heading">
            Таблица Пользователей
          </header>

          <table class="table table-striped table-advance table-hover">
            <tbody>
            <tr>
              <th># id</th>
              <th><i class="icon_profile"></i> Картинка</th>
              <th><i class="icon_profile"></i> Название</th>
              <th><i class="icon_profile"></i> Цена</th>
              <th><i class="icon_profile"></i> Описание</th>
              <th><i class="icon_calendar"></i> Создан</th>
              <th><i class="icon_key"></i></th>
            </tr>
            <% @product.each do |product| %>
                <tr id="product_<%= product.id %>">
                  <td><%= product.id %></td>
                  <td><span class="profile-ava sellerAvatar"><%= image_tag product.main_image %></span></td>
                  <td><%= product.name.first %></td>
                  <td><%= product.price %></td>
                  <td><%= product.description %></td>
                  <td><%= product.created_at.strftime('%F') %></td>
                  <td><%= product.moderation == 1 ? '<i class="icon_lock-open seller_lock-open">'.html_safe : '<i class="icon_lock seller_lock-lock">'.html_safe %></td>
                  <td>
                    <div class="btn-group">
                      <%= link_to '<i class="icon_pencil"></i>'.html_safe, edit_product_admin_panel_path(product.id.to_s+'-'+transtlit_name(product.name)+'-'+transtlit_name(product.name)), class: 'btn btn-success' %>
                          <span class='btn btn-danger deleteMessage' product_id='<%= product.id %>'><i class="icon_close_alt2"></i></span>
                          </div>
                          </td>
                          </tr>
                      <% end %>
                      </tbody>
                      </table>
                      </section>
                      </div>
                      </div>
                      </section>
                      </section>

