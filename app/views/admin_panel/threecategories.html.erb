<section id="main-content">
  <section class="wrapper">
    <div class="container-fluid">
      <% if flash[:alert] %>
          <div class="alert alert-error" class="text-center">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= flash[:alert] %></div>
      <% end %>
      <% if flash[:notice] %>
          <div class="alert alert-info" class="text-center">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= flash[:notice] %>
          </div>
      <% end %>
    </div>
    <div class="row">
      <center><%= link_to 'Создать категорию 3', new_threecategory_path, class: 'btn btn-info btn-lg buttonNew' %></center>
      <div class="col-lg-12">
        <section class="panel">
          <header class="panel-heading">
            Таблица Пользователей
          </header>

          <table class="table table-striped table-advance table-hover">
            <tbody>
            <tr>
              <th># id</th>
              <th><i class="icon_profile"></i> Картинка</th>
              <th><i class="icon_profile"></i> Название</th>
              <th><i class="icon_profile"></i> Родитель2</th>
              <th><i class="icon_profile"></i> Родитель1</th>
              <th><i class="icon_profile"></i> Описание</th>
              <th><i class="icon_calendar"></i> Создан</th>
            </tr>
            <% @threecategory.each do |threecategory| %>
                <tr id="threecategory_<%= threecategory.id %>">
                  <td><%= threecategory.id %></td>
                  <td><span class="profile-ava sellerAvatar"><%= image_tag threecategory.image %></span></td>
                  <td><%= threecategory.name %></td>
                  <td><%= threecategory.twocategory.name %></td>
                  <td><%= threecategory.twocategory.category.name %></td>
                  <td><%= threecategory.description %></td>
                  <td><%= threecategory.created_at.strftime('%F') %></td>
                  <td>
                    <div class="btn-group">
                      <%= link_to '<i class="icon_pencil"></i>'.html_safe, edit_threecategory_path(threecategory), class: 'btn btn-success' %>
                      <span class='btn btn-danger deleteMessage2' threecategory_id='<%= threecategory.id %>'><i class="icon_close_alt2"></i></span>
                    </div>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </section>
        <p><%= will_paginate @threecategory, previous_label: '<i class="fa fa-chevron-circle-left fa-lg adminPag"></i>'.html_safe, next_label: '<i class="fa fa-chevron-circle-right fa-lg adminPag"></i>'.html_safe %></p>
      </div>
    </div>
  </section>
</section>

