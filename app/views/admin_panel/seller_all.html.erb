<section id="main-content">
  <section class="wrapper">
    <div class="container">


      <div class="container">

        <div class="dropdown">
          <a class="btn btn-primary active adminDropMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#">
            <i class="fa fa-caret-down" aria-hidden="true"></i> Сртировать продавцов по:
          </a>

          <ul class="dropdown-menu" aria-labelledby="people_btn">
            <li>
              <%= link_to 'Прошедшие модеацию', admin_panel_seller_all_path(moderation: 1) %>
            </li>
            <li>
              <%= link_to 'Не прошедшие модерацию', admin_panel_seller_all_path(moderation: 0) %>
            </li>
            <li>
              <%= link_to 'Все', admin_panel_seller_all_path %>
            </li>
          </ul>

        </div>
      </div>






      <% if flash[:alert] %>
          <div class="alert alert-error" class="text-center">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= flash[:alert] %></div>
      <% end %>
      <% if flash[:notice] %>
          <div class="alert alert-info" class="text-center">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= flash[:notice] %>
          </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <section class="panel">
          <header class="panel-heading">
            Таблица Пользователей
          </header>

          <table class="table table-striped table-advance table-hover">
            <tbody>
            <tr>
              <th># id</th>
              <th><i class="icon_profile"></i> Аватар</th>
              <th><i class="icon_profile"></i> ФИО</th>
              <th><i class="icon_pin_alt"></i> Область</th>
              <th><i class="icon_mail_alt"></i> Почта</th>
              <th><i class="icon_calendar"></i> Регистрация</th>
              <th><i class="icon_key"></i></th>
            </tr>
            <% @sellers.each do |seller| %>
                <tr id="seller_<%= seller.id %>">
                  <td><%= seller.id %></td>
                  <td><span class="profile-ava sellerAvatar"><%= image_tag seller.avatar %></span></td>
                  <td><%= seller.surname %>. <%= seller.name.first %></td>
                  <td><%= seller.city %></td>
                  <td><%= seller.email %></td>
                  <td><%= seller.created_at.strftime('%F') %></td>
                  <td><%= seller.moderation == 1 ? '<i class="icon_lock-open seller_lock-open">'.html_safe : '<i class="icon_lock seller_lock-lock">'.html_safe %></td>
                  <td>
                    <div class="btn-group">
                      <%= link_to '<i class="icon_pencil"></i>'.html_safe, edit_seller_admin_panel_path(seller.id.to_s+'-'+transtlit_name(seller.name)+'-'+transtlit_name(seller.surname)), class: 'btn btn-success' %>
                      <span class='btn btn-danger deleteMessage' seller_id='<%= seller.id %>'><i class="icon_close_alt2"></i></span>
                    </div>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </section>
      </div>
    </div>
  </section>
</section>

