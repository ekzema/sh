<p id="notice"><%= notice %></p>
<div class="container-fluid">
<div class="row">
<div class="hidden-xs col-sm-3 ">
  <!-- меню -->
  <div class="ul1">
  <ul class="ul2 ">
    <p class="category"><%= @category.name %></p>
    <li class="li1">
    <% @category.twocategories.each do |twocategory | %>
      <p><%= twocategory.name %></p>
      <ul>
        <% twocategory.threecategories.each do | threecategory | %>
        <li class="li2">
          <p><%= link_to threecategory.name, threecategory_path( threecategory.id) %></p>
        </li>
        <% end %>
      </ul>
    <% end %>
    </li>
  </ul>
  </div>
</div>

<div class="col-xs-12 col-sm-9 text-center">
      <% @products.each do |product| %>
      <div class="col-xs-6 col-sm-4 col-lg-3 product">
      <div class="row size1">
      <%= link_to product_path(product.id) do %>
      <%= image_tag product.main_image(:medium)  %>
        <p class="size"><%= product.name %></p>
        <p class="size5"><%= product.size %></p>
        <% end %>
      </div>
      </div>
    <% end %>
  </div>
</div>
</div>
</div>

