<p id="notice"><%= notice %></p>

<!-- центральное меню
 -->

<div class="container-fluid">
  <div class="row">
  <div class="col-sm-2 col-md-2 col-lg-2 hidden-xs">
    
    <menu class="fot">
      <% @product.product_slide_images.each do |slide| %>
          <li>
            <%= link_to(slide.image.to_s, class: 'gallery', rel: 'group') do %>
                <%= image_tag slide.image %>
            <% end %>
          </li>
      <% end %>
    </menu>
     
  </div>
  <div class="col-xs-12 col-sm-5 glf text-center">

    <p><%= image_tag(@product.main_image) %></p>
    <p class="names"><%= @product.name %></p>

  </div> 
  <div class="col-xs-12 col-sm-5 glf">
    <div id="MainMenu">
        <ul class="list-group panel list">
          <li class="list-group-item list-group-item-success" data-toggle="collapse" data-parent="#MainMenu"><%= @product.name %></li>
          <li class="list-group-item list-group-item-success" data-toggle="collapse" data-parent="#MainMenu">СТОИМОСТЬ: <%= @product.price %> ГРН.</li>
          <li class="list-group-item list-group-item-success" data-toggle="collapse" data-parent="#MainMenu">РАЗМЕР: <%= @product.size %></li>
          <li class="list-group-item list-group-item-success" data-toggle="collapse" data-parent="#MainMenu">ОПИСАНИЕ: <%= @product.description %></li>
          <li class="list-group-item list-group-item-success" data-toggle="collapse" data-parent="#MainMenu">ПРОДАВЕЦ <%= @product.seller.name %></li>
        </ul>
    </div>
  </div>
  </div> 
</div> 

