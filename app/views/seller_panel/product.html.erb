<div class="container">
  <% if flash[:alert] %>
      <div class="alert alert-error" class="text-center">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:alert] %></div>
  <% end %>
  <% if flash[:notice] %>
      <div class="alert alert-success" class="text-center">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
  <% end %>

</div>
<div class="container">
<div class="row">
<div class="col-sm-2 ava">
  <%= image_tag current_seller.avatar, :class => 'img-responsive img-rounded' %>
  <%= current_seller.name %> <%= current_seller.surname %>
</div>
<div class="col-sm-10">
<div class="table-responsive"> 
  <table class="table table-hover">
  <caption><h3 class="text-center">Все товары</h3></caption>  
    <thead>
      <tr class="info">
        <th>Основное фото</th>
        <th>Название</th>
        <th>Размер</th>
        <th>Цена</th>
        <th>Описание</th>
        <th>Перейти</th>
        <th>Изменить</th>
        <th>Удалить</th>
        <th>Показать</th>
      </tr>
    </thead>
    <tbody>
    <% @seller_products.each do |product| %>
      <tr class="success imgcat">
        <td><%= image_tag product.main_image.url %></td>
        <td><%= product.name %></td>
        <td><%= product.size %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= link_to 'Show', show_product_path(product.id.to_s+'-'+transtlit_name(product.name)), :type => 'button', :class => 'btn btn2' %></td>
        <td><%= link_to 'Edit', edit_product_path(product.id.to_s+'-'+transtlit_name(product.name)), :type => 'button', :class => 'btn btn3' %></td>
        <td><%= link_to 'Удалить', product, method: :delete, data: { confirm: 'Are you sure?' }, :type => 'button', :class => 'btn btn1' %></td>
        <td>
          <%= form_tag(seller_panel_product_visible_path, method: :post,  class: "product_info", id: "product_visible#{product.id}") do %>
              <%= hidden_field_tag 'product_id', product.id %>
              <%= check_box_tag 'visible', 1, product.visible == 1, {id: "product#{product.id}", pr_id: product.id }  %>
          <%= label_tag "product#{product.id}", '<span></span>'.html_safe %>
          <% end %>
        </td>
      </tr>
    <% end %>



    </tbody>
  </table>

  <script type="text/javascript">

      $(function () {
          $('input[type=checkbox]').change(function () {
               var check_id = $(this).attr('pr_id');
              $.ajax({
                  url: '/seller_panel/product_visible',
                  type: 'POST',
                  data: $('#product_visible'+check_id).serialize()
              });
          });
      });

  </script>
</div>
<div>
  <%= link_to 'Новый товар', new_product_path, :class => 'btn btn2 form' %> 
</div>
<div>
  <%= link_to "На главную", :back, :class => 'btn btn4 form' %>
</div>
</div>
</div>
</div>
</div>