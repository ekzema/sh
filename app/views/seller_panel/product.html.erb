<div class="container">
  <% if flash[:alert] %>
      <div class="alert alert-error" class="text-center">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:alert] %></div>
  <% end %>
  <% if flash[:notice] %>
      <div class="alert alert-success" class="text-center">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
  <% end %>

</div>
<div class="container-fluid">
<div class="row">
<!-- <div class="col-sm-12 ava hidden-xs hidden-sm">
  <%= image_tag current_seller.avatar, :class => 'img-responsive img-rounded' %>
  <%= current_seller.name %> <%= current_seller.surname %>
</div> -->
<div class="col-sm-12">
<h3 class="text-center">Все товары</h3>
<div class="table- responsive"> 
  <table class="table table-hover">
  <!-- <caption><h3 class="text-center">Все товары</h3></caption>  --> 
    <thead>
      <tr class="info">
        <th class="text-center">Фото</th>
        <th class="hidden-xs text-center">Название</th>
        <th class="hidden-xs text-center">Размер</th>
        <th class="hidden-xs text-center">Цена</th>
        <th class="hidden-xs text-center">Описание</th>
        <th class="hidden-xs text-center">Show</th>
        <th class="text-center">Edit</th>
        <th class="text-center">Delete</th>
        <th class="text-center">Показать</th>
      </tr>
    </thead>
    <tbody>
    <% @seller_products.each do |product| %>
      <tr class="success imgcat text-center">
        <td><%= image_tag product.main_image.url %></td>
        <td class="hidden-xs "><%= product.name %></td>
        <td class="hidden-xs"><%= product.size %></td>
        <td class="hidden-xs"><%= product.price %></td>
        <td class="hidden-xs "><%= product.description %></td>
        <td class="hidden-xs ">
        <%= link_to ' ', showproduct_seller_panel_path(product.id.to_s+'-'+transtlit_name(product.name)), :type => 'button', :class => ' btn btn2 glyphicon glyphicon-zoom-in' %></td>
        <td><%= link_to ' ', edit_product_path(product.id.to_s+'-'+transtlit_name(product.name)), :type => 'button', :class => 'btn btn3 glyphicon glyphicon-pencil' %></td>
        <td><%= link_to ' ', product, method: :delete, data: { confirm: 'Are you sure?' }, :type => 'button', :class => 'btn btn1 glyphicon glyphicon-trash' %></td>
        <td>
          <%= form_tag(seller_panel_product_visible_path, method: :post,  class: "product_info", id: "product_visible#{product.id}") do %>
              <%= hidden_field_tag 'product_id', product.id %>
              <%= check_box_tag 'visible', 1, product.visible == 1, {id: "product#{product.id}", pr_id: product.id }  %>
          <%= label_tag "product#{product.id}", '<span></span>'.html_safe %>
          <% end %>
        </td>
      </tr>
    <% end %>



    </tbody>
  </table>

  <script type="text/javascript">

      $(function () {
          $('input[type=checkbox]').change(function () {
               var check_id = $(this).attr('pr_id');
              $.ajax({
                  url: '/seller_panel/product_visible',
                  type: 'POST',
                  data: $('#product_visible'+check_id).serialize()
              });
          });
      });

  </script>
</div>
<div>
  <%= link_to 'Новый товар', new_product_path, :class => 'btn btn2 form' %> 
</div>
<div>
  <%= link_to "На главную", root_path, :class => 'btn btn4 form' %>
</div>
</div>
</div>
</div>
</div>