<div class="container">
  <% if flash[:alert] %>
      <div class="alert alert-error" class="text-center">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:alert] %></div>
  <% end %>
  <% if flash[:notice] %>
      <div class="alert alert-success" class="text-center">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
  <% end %>

</div>

<div class="container">
<div class="row">
<div class="col-sm-2 ava">
  <%= image_tag current_seller.avatar, :class => 'img-responsive img-rounded' %>
  <%= current_seller.name %> <%= current_seller.surname %>
</div>
<div class="col-sm-10">
<div class="table-responsive"> 
  <table class="table table-hover">
  <caption><h3 class="text-center">Все товары</h3></caption>  
    <thead>
      <tr class="info">
        <th>Основное фото</th>
        <th>Название</th>
        <th>Размер</th>
        <th>Цена</th>
        <th>Описание</th>
        <th>Перейти</th>
        <th>Изменить</th>
        <th>Удалить</th>
      </tr>
    </thead>
    <tbody>
    <% @seller_products.each do |product| %>
      <tr class="success imgcat">
        <td><%= image_tag product.main_image.url %></td>
        <td><%= product.name %></td>
        <td><%= product.size %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= link_to 'Show', show_product_path(product.id.to_s+'-'+transtlit_name(product.name)), :type => 'button', :class => 'btn btn2' %></td>
        <td><%= link_to 'Edit', edit_product_path(product.id.to_s+'-'+transtlit_name(product.name)), :type => 'button', :class => 'btn btn3' %></td>
        <td><%= link_to 'Удалить', product, method: :delete, data: { confirm: 'Are you sure?' }, :type => 'button', :class => 'btn btn1' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<div>
  <%= link_to 'Новый товар', new_product_path, :class => 'btn btn2 form' %> 
</div>
<div>
  <%= link_to "На главную", :back, :class => 'btn btn4 form' %>
</div>
</div>
</div>
</div>
</div>